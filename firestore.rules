
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      // Allow access if the user is the designated admin
      return request.auth.token.email == "rohitsengar02@gmail.com";
    }

    function isOwner(userId) {
      // Allow access if the user is the owner of the document
      return request.auth.uid == userId;
    }

    // Admins have full access to everything
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Public collections can be read by anyone
    match /products/{productId} {
      allow read: if true;
    }
    match /categories/{categoryId} {
      allow read: if true;
    }
    match /homepageSections/{sectionId} {
        allow read: if true;
    }
    match /heroContent/{docId} {
        allow read: if true;
    }
    match /discounts/{discountId} {
        allow read: if true;
    }
    match /settings/{docId} {
        allow read: if true;
    }

    // User-specific collections
    match /users/{userId} {
      // A user can create their own account and read/update/delete it
      allow create, read, update, delete: if isOwner(userId);

      // A user can manage their own subcollections
      match /addresses/{addressId} {
        allow read, write: if isOwner(userId);
      }
      match /cart/{cartId} {
        allow read, write: if isOwner(userId);
      }
      match /wishlist/{wishlistId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Orders can be created by any authenticated user.
    // Users can only read or update their own orders.
    match /orders/{orderId} {
        allow create: if request.auth.uid != null;
        allow read, update: if isOwner(resource.data.userId);
    }
    
    // Reviews can be created by authenticated users
    // only approved reviews are public
    match /reviews/{reviewId} {
        allow create: if request.auth.uid != null && isOwner(request.resource.data.userId);
        allow read: if resource.data.status == 'approved';
        allow update, delete: if isAdmin();
    }
  }
}
